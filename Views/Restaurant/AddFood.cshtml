@model zeroHunger.DTOs.OrderDTO

@{
  ViewBag.Title = "AddFood";
}

<h2>AddFood</h2>

@using (Html.BeginForm()) 
{
  @Html.AntiForgeryToken()
  
<div class="form-horizontal">
    <h4>OrderDTO</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
    </div>

    <div class="form-group">
        Food Name
        <div class="col-md-10">
            @Html.EditorFor(model => model.foodName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.foodName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Preserve Time
        <div class="col-md-10">
            Date: <input type="date" id="prsrvDate" name="prsrvDate" />
            Time: <input type="time" id="prsrvTime" name="prsrvTime" />
            @Html.ValidationMessageFor(model => model.prsrvTime, "", new { @class = "text-danger" })
        </div>
    </div>


    @if (Session["res"] != null)
    {
        var res = (zeroHunger.EF.Restaurant)Session["res"];
        <div class="form-group">
            <input type="hidden" id="rId" name="rId" value="@res.rId">
        </div>
    }

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-success" />
        </div>
    </div>
</div>
}

<div>
  @Html.ActionLink("Back to List", "Index")
</div>
